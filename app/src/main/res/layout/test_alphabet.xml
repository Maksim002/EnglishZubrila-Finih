<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#251A3A"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tooltesting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false" />

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textColor="#F4F4F7"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Completed: 0/5" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="197dp"
        android:layout_marginRight="197dp"
        android:layout_marginBottom="0dp"
        android:padding="10dp"
        android:text="Time"
        android:textColor="#FAFAFA"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#5F5F69"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#F0F0F5"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Question" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="272dp"
        android:layout_above="@id/countLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer1"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#B8A6B8"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#00000A"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="Answer1" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer2"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#B8A6B8"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#001"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="answer2" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer3"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#B8A6B8"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#001"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="answer3" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer4"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#B8A6B8"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#001"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="answer4" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>