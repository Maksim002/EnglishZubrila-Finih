<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6D7186"
    tools:context=".ui.corses.alphabet.test.resultActivity">


    <TextView
        android:id="@+id/resultStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:fontFamily="berkshire_swash'"
        android:text="RESULT"
        android:textAllCaps="false"
        android:textColor="#FAFAFA"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="#F4F4F7"
        android:text="2 / 10"
        android:textSize="100dp" />


    <TextView
        android:id="@+id/totalScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#F6F4F7"
        android:text="Total score: 3333"
        android:textSize="35sp"
        />

    <android.support.v7.widget.CardView
        android:padding="5dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="7dp">

    <Button
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#B8A6B8"
        android:onClick="returnTop"
        android:text="Повторить Тест"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />
    </android.support.v7.widget.CardView>

</LinearLayout>